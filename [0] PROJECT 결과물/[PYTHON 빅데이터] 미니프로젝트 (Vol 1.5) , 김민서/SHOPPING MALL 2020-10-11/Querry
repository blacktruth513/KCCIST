CREATE DATABASE shopping_mall
USE shopping_mall

DROP TABLE member;
CREATE TABLE member (
	m_email	VARCHAR(30) 	PRIMARY KEY,	#회원 이메일
	m_pw		VARCHAR(50)		NOT NULL,		#회원 비밀번호
	m_name	VARCHAR(25) 	NOT NULL,		#이름
	s_tel		INT				NULL,				#연락처
	order_num INT				NULL				#주문번호
);

INSERT INTO member (m_email,m_pw,m_name,s_tel)
CREATE TABLE memberLog (
    m_email	    VARCHAR(30) ,       #E-Mail
	name 		VARCHAR,	        #이름
	querry 	varchar(50)	NULL,		#실행쿼리
	method	VARCHAR(50)	NULL,		#실행함수
	date		date	NULL,       #실행시간

	FOREIGN KEY(m_email) REFERENCES member(m_email)
);

DROP TABLE photo_table;
CREATE TABLE photo_table (
	p_id		INT PRIMARY KEY AUTO_INCREMENT,
	p_fname 	VARCHAR(255),	##파일명
	p_ext		CHAR(5),			##확장명
	p_size	BIGINT,			##파일크기
	p_height	INT,				##이미지 높이
	p_width	INT,				##이미지 넓이
	p_photo	LONGBLOB,
	p_upDate	DATE, 			##생성날짜
	p_upUser	CHAR(10)			##업로드 유저[FK]
);