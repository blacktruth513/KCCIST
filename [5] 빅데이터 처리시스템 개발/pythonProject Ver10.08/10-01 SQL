CREATE TABLE `image_table` (
	`imageId` INT(10,0) NOT NULL AUTO_INCREMENT,
	`imageName` VARCHAR(255) NULL DEFAULT NULL COLLATE 'utf8mb4_0900_ai_ci',
	`imageExt` CHAR(5) NULL DEFAULT NULL COLLATE 'utf8mb4_0900_ai_ci',
	`xSize` INT(10,0) NULL DEFAULT NULL,
	`ySize` INT(10,0) NULL DEFAULT NULL,
	PRIMARY KEY (`imageId`) USING BTREE
)
COLLATE='utf8mb4_0900_ai_ci'
ENGINE=InnoDB
AUTO_INCREMENT=14
;


CREATE TABLE `pixel_table` (
	`imageId` INT(10,0) NOT NULL,
	`x` SMALLINT(5,0) NULL DEFAULT NULL,
	`y` SMALLINT(5,0) NULL DEFAULT NULL,
	`r` TINYINT(3,0) NULL DEFAULT NULL,
	`g` TINYINT(3,0) NULL DEFAULT NULL,
	`b` TINYINT(3,0) NULL DEFAULT NULL,
	INDEX `imageId` (`imageId`) USING BTREE,
	CONSTRAINT `pixel_table_ibfk_1` FOREIGN KEY (`imageId`) REFERENCES `image_db`.`image_table` (`imageId`) ON UPDATE NO ACTION ON DELETE NO ACTION
)
COLLATE='utf8mb4_0900_ai_ci'
ENGINE=InnoDB
;

